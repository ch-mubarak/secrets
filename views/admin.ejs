<%- include('partials/header') %>

    <div class="container-fluid">
        <table class="table table-striped table-bordered table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>#id</th>
                    <th>Name</th>
                    <th>Admin</th>
                    <th>email</th>
                    <th>secret</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>

                <% userDB.forEach(user=>{ %>
                    <tr>
                        <td>
                            <%= user._id %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.isAdmin %>
                        </td>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <%= user.secret %>
                        </td>
                        <td>
                            <form action="/delete" method="post">
                                <a href="/delete/<%=user._id%>" class="btn btn-light m-2">
                                    <i class="fa-solid fa-trash"></i></a>
                            </form>
                            <form action="/update" method="post">
                                <a class="btn btn-dark m-2" href=""><i class="fa-solid fa-pencil"></i></a>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <hr>
        <a class="btn btn-dark btn-lg d-flex justify-content-center m-2" href=" /logout" role="button">Log Out</a>
    </div>


    <%- include('partials/footer') %>
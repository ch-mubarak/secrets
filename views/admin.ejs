<%- include('partials/header') %>

    <table id="userTable" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>#id</th>
                <th>Name</th>
                <th>Admin</th>
                <th>email</th>
                <th>secret</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>

            <% userDB.forEach(user=>{ %>
                <tr>
                    <td>
                        <%= user._id %>
                    </td>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.isAdmin %>
                    </td>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.secret %>
                    </td>
                    <td>
                        <form action="/delete" method="post">
                            <a data-id="<%=user._id%>" class=" btn btn-dark btn-sm m-2" href="">Delete</a>
                        </form>
                        <form action="/update" method="post">
                            <a class="btn btn-light btn-sm m-2" href="">Update</a>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <hr>
    <a class="btn btn-dark btn-lg d-flex justify-content-center"" href=" /logout" role="button">Log Out</a>


    <%- include('partials/footer') %>